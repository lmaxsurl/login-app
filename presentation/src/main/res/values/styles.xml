<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTextView">
        <item name="android:lineSpacingExtra">@dimen/lineHeight</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="AppEditText" parent="AppTextView">
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:textColorHint">@color/LightTeal</item>
    </style>

    <style name="Guideline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SignUpButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/button_enabled</item>
        <item name="android:text">@string/sign_up</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

</resources>
